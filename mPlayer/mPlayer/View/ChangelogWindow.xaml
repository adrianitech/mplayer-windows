<Window x:Class="mPlayer.View.ChangelogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Changelog" Height="350" Width="500" WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow" ResizeMode="NoResize" UseLayoutRounding="True">
    
    <Grid Background="White">
        <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <TextBlock x:Name="TextChangelog" Margin="15,15,0,15" Foreground="#383838" FontSize="12" TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>
    
</Window>
